
@using Cleanasia.Areas.Identity.Data;
@using Microsoft.AspNetCore.Identity
@inject SignInManager<CleanasiaUser> SignInManager
@inject UserManager<CleanasiaUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item1">
        <a  class="nav-link1 text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">@User.Identity.Name!</a>
    </li>
    <li class="nav-item1">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button  type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item1">
        <a class="nav-link1 text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item1">
        <a class="nav-link1 text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
