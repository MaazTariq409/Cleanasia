@model Cleanasia.ViewModels.BookingViewModel

<body>
	<div id="booking" style="align-content:center !important">
		<div class="container">
			<div class="row">
				<div class="booking-form">
					<div class="form-header">
						<h1>Book Service</h1>
					</div>
					<form action="Create" method="post">
						<div class="row">
							<div class="col-sm-6">
								<div class="form-group">
									<span class="form-label">Name</span>
									<input class="form-control" name="Name" type="text" placeholder="Enter your name">
								</div>
							</div>
							<div class="col-sm-6">
								<div class="form-group">
									<span class="form-label">Email</span>
									<input class="form-control" name="Email" type="email" placeholder="Enter your email">
								</div>
							</div>
						</div>
						<div class="form-group">
							<span class="form-label">Phone</span>
                            <input name="Phone" placeholder="0300-4567111" class="form-control" pattern="[0-9]+" title="Only Numbers Allowed " required  />
						</div>
						<div class="form-group">
							<span class="form-label">Address</span>
							<input class="form-control" name="Address" type="text" placeholder="Enter Current Address">
						</div>
						<div class="row">
							<div class="col-sm-5">
								<div class="form-group">
									<span class="form-label">Starting Date</span>
									<input class="form-control" name="StartingDateTime" type="date" required>
								</div>
							</div>
							<div class="col-sm-7">
								<div class="row">
									<div class="col-sm-4">
										<div class="form-group">
											<span class="form-label">Hour</span>
											<input class="form-control" name="Hours" type="number" required>
										</div>
									</div>
								</div>
							</div>
						</div>
						<div class="form-btn">
							<button class="submit-btn">Book Now</button>
						</div>
					</form>
					<button class="submit-btn"><a asp-controller="BookingService" asp-action="index"><span>Booked Services</span></a></button>
				</div>
			</div>
		</div>
	</div>
</body>